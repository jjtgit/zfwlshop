<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".activity.AccountSetActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_38"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_13"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_centerVertical="true"
                android:id="@+id/return_amend"
                android:paddingLeft="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_20">
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_17"
                    android:background="@mipmap/return_blask"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账户设置"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/unselected"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>
   <androidx.core.widget.NestedScrollView
       android:layout_width="match_parent"
       android:overScrollMode="never"
       android:layout_height="wrap_content">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:paddingBottom="@dimen/dp_15"
               android:paddingTop="@dimen/dp_20"
               android:paddingLeft="@dimen/dp_16"
               android:paddingRight="@dimen/dp_16"
               android:layout_marginTop="@dimen/dp_10"
               android:background="@drawable/classify_shop_ellipse"
               android:orientation="vertical">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   >
                   <ImageView
                       android:layout_centerVertical="true"
                       android:id="@+id/head_account"
                       android:layout_width="@dimen/dp_60"
                       android:layout_height="@dimen/dp_60"
                       android:background="@mipmap/round_head"/>
                   <LinearLayout
                       android:layout_centerVertical="true"
                       android:layout_toRightOf="@id/head_account"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:gravity="center_vertical"
                       android:layout_marginLeft="@dimen/dp_5">
                       <TextView
                           android:id="@+id/phone_account"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="15814112365"
                           android:textColor="@color/unselected"
                           android:textSize="@dimen/sp_15"/>
                       <TextView
                           android:id="@+id/name_account"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_marginTop="@dimen/dp_17"
                           android:text="用户名：半仙"
                           android:textSize="@dimen/sp_12"
                           android:textColor="@color/colorUnselected"/>
                   </LinearLayout>
                   <ImageView
                       android:id="@+id/personage_more_account"
                       android:layout_centerVertical="true"
                       android:layout_alignParentRight="true"
                       android:layout_width="@dimen/dp_7"
                       android:layout_height="@dimen/dp_12"
                       android:background="@mipmap/more"/>
               </RelativeLayout>
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:layout_marginTop="@dimen/dp_15"
                   android:background="@mipmap/onter_background"/>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="地址管理"
                        android:textColor="@color/unselected"
                        android:textSize="@dimen/sp_16"/>
                    <LinearLayout
                        android:id="@+id/site_more_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="修改地址"
                            android:textSize="@dimen/sp_14"
                            android:textColor="@color/colorUnselected"/>
                        <ImageView
                            android:layout_width="@dimen/dp_7"
                            android:layout_height="@dimen/dp_12"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:background="@mipmap/more"/>
                    </LinearLayout>
                </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/dp_15"
               android:padding="@dimen/dp_16"
               android:gravity="center_vertical"
               android:background="@drawable/classify_shop_ellipse"
               android:orientation="vertical">
               <LinearLayout
                   android:layout_width="match_parent"
                   android:gravity="center_vertical"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="账户安全"
                       android:textColor="@color/unselected"
                       android:textSize="@dimen/sp_16"/>
                   <LinearLayout
                       android:id="@+id/account_more_account"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:orientation="horizontal"
                       android:gravity="center">
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="修改密码"
                           android:textSize="@dimen/sp_14"
                           android:textColor="@color/colorUnselected"/>
                       <ImageView
                           android:layout_width="@dimen/dp_7"
                           android:layout_height="@dimen/dp_12"
                           android:layout_marginLeft="@dimen/dp_5"
                           android:background="@mipmap/more"/>
                   </LinearLayout>
               </LinearLayout>
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:layout_marginTop="@dimen/dp_15"
                   android:background="@mipmap/onter_background"/>
               <LinearLayout
                   android:layout_marginTop="@dimen/dp_15"
                   android:layout_width="match_parent"
                   android:gravity="center_vertical"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_weight="1"
                       android:text="关联账号"
                       android:textColor="@color/unselected"
                       android:textSize="@dimen/sp_16"/>
                   <ImageView
                       android:id="@+id/relevance_more_account"
                       android:layout_width="@dimen/dp_7"
                       android:layout_height="@dimen/dp_12"
                       android:layout_marginLeft="@dimen/dp_5"
                       android:background="@mipmap/more"/>
               </LinearLayout>
           </LinearLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/dp_15"
           android:padding="@dimen/dp_16"
           android:gravity="center_vertical"
           android:background="@drawable/classify_shop_ellipse"
           android:orientation="vertical">
           <LinearLayout
               android:layout_width="match_parent"
               android:gravity="center_vertical"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:text="设置"
                   android:textColor="@color/unselected"
                   android:textSize="@dimen/sp_16"/>
               <ImageView
                   android:id="@+id/set_more_account"
                   android:layout_width="@dimen/dp_7"
                   android:layout_height="@dimen/dp_12"
                   android:layout_marginLeft="@dimen/dp_5"
                   android:background="@mipmap/more"/>
           </LinearLayout>
       </LinearLayout>
       <TextView
           android:id="@+id/qiut_account"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingTop="@dimen/dp_14"
           android:paddingBottom="@dimen/dp_14"
           android:layout_marginTop="@dimen/dp_10"
           android:background="@drawable/classify_shop_ellipse"
           android:gravity="center"
           android:text="退出登入"
           android:textSize="@dimen/sp_16"
           android:textColor="@color/unselected"/>
       </LinearLayout>
   </androidx.core.widget.NestedScrollView>
</LinearLayout>