<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AmendPasswordActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_38"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_13"
        android:background="@color/white">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:layout_centerVertical="true"
               android:id="@+id/return_amend"
               android:paddingLeft="@dimen/dp_16"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingRight="@dimen/dp_20">
               <ImageView
                   android:layout_width="@dimen/dp_10"
                   android:layout_height="@dimen/dp_17"
                   android:background="@mipmap/return_blask"/>
           </LinearLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="修改密码"
               android:textSize="@dimen/sp_17"
               android:textColor="@color/unselected"
               android:layout_centerHorizontal="true"/>
       </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_25">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_50"
            android:orientation="vertical"
            android:background="@drawable/shopcar_ellipse"
            android:paddingTop="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_15"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10">
            <EditText
                android:id="@+id/phone_edamend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入手机号"
                android:singleLine="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_15">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/shopcar_ellipse"
                android:paddingTop="@dimen/dp_15"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_15"
                android:paddingRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10">
                <EditText
                    android:id="@+id/verification_code_edamend"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="请输入验证码"
                    android:singleLine="true"
                    />
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/code_layout"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/send_code_amend"
                        android:visibility="visible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:textColor="@color/verificationCode"
                        android:text="发送验证码"/>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/verification_code_amend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/dp_15"
                        android:paddingRight="@dimen/dp_15"
                        android:paddingTop="@dimen/dp_5"
                        android:paddingBottom="@dimen/dp_5"
                        android:textColor="@color/colorUnselected"
                        android:text="重新发送(60)"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/not_confirm_text"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_50"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:background="@drawable/verification_code_remind"
            android:text="确定"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/colorUnselected"/>
        <TextView
            android:id="@+id/confirm_text"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_50"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:background="@drawable/messages_remind"
            android:text="确定"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white"/>
    </LinearLayout>
</LinearLayout>