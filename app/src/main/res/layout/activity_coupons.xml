<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".activity.CouponsActivity">
    <LinearLayout
        android:id="@+id/integral_mylayout"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_36">
        <RelativeLayout
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/return_coupons"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_18"
                android:background="@mipmap/return_blask" />
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的优惠卷"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_18"
                android:layout_marginLeft="@dimen/dp_20"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_24"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/stayuse_layout"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/stayuse_coupons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待使用"
                android:textColor="@color/colorSelect"
                android:textSize="@dimen/sp_14"/>
            <View
                android:id="@+id/stayuse_view"
                android:visibility="visible"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_2"
                android:background="@color/colorSelect"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/enduse_layout"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/enduser_coupons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已使用"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_14"/>
            <View
                android:id="@+id/enduse_view"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_2"
                android:background="@color/colorSelect"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/pastdue_layout"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/pastdue_coupons"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已过期"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_14"/>
            <View
                android:id="@+id/pastdue_view"
                android:visibility="gone"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_2"
                android:background="@color/colorSelect"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:id="@+id/viewpage_coupons"></androidx.viewpager.widget.ViewPager>
</LinearLayout>