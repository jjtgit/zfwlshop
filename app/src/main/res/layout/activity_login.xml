<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_38"
            android:layout_width="match_parent"
            android:paddingRight="@dimen/dp_25"
            android:paddingLeft="@dimen/dp_16"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/return_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_20">
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_17"
                    android:background="@mipmap/return_blask"/>
            </LinearLayout>
            <TextView
                android:id="@+id/login_text"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:textColor="@color/textGray"
                android:textSize="@dimen/sp_15"/>
        </RelativeLayout>
       <androidx.core.widget.NestedScrollView
           android:overScrollMode="never"
           android:layout_width="match_parent"
           android:layout_marginBottom="@dimen/dp_40"
           android:layout_height="match_parent">
           <LinearLayout
               android:layout_marginLeft="@dimen/dp_25"
               android:paddingRight="@dimen/dp_25"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:text="账号密码登录"
                   android:textSize="@dimen/sp_24"
                   android:textColor="@color/unselected"
                   android:textStyle="bold"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_58"/>
               <EditText
                   android:id="@+id/name_edit"
                   android:singleLine="true"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_44"
                   android:background="@null"
                   android:hint="用户名/邮箱/手机号"
                   android:text="" />
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:layout_marginTop="@dimen/dp_15"
                   android:background="@mipmap/onter_background"/>
               <EditText
                   android:id="@+id/password_edit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_35"
                   android:background="@null"
                   android:singleLine="true"
                   android:password="true"
                   android:hint="请输入密码"
                   android:text="" />
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="0.5dp"
                   android:layout_marginTop="@dimen/dp_15"
                   android:background="@mipmap/onter_background"/>
               <TextView
                   android:id="@+id/login_button"
                   android:gravity="center"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_45"
                   android:paddingBottom="@dimen/dp_14"
                   android:paddingTop="@dimen/dp_14"
                   android:background="@drawable/login"
                   android:text="登录"
                   android:textSize="@dimen/sp_16"
                   android:textColor="@color/white"
                   android:textStyle="bold"/>
               <RelativeLayout
                   android:layout_marginTop="@dimen/dp_20"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="短信验证码登录"
                       android:textColor="@color/textGray"
                       android:textSize="@dimen/sp_12"/>
                   <TextView
                       android:id="@+id/forget_lgoin"
                       android:layout_alignParentRight="true"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="忘记密码"
                       android:textColor="@color/textGray"
                       android:textSize="@dimen/sp_12"/>
               </RelativeLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:gravity="center"
                   android:layout_marginTop="@dimen/dp_60">
                   <ImageView
                       android:layout_width="@dimen/dp_60"
                       android:layout_height="0.5dp"
                       android:background="@mipmap/onter_background"/>
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginLeft="@dimen/dp_5"
                       android:text="其它登入方式"/>
                   <ImageView
                       android:layout_marginLeft="@dimen/dp_5"
                       android:layout_width="@dimen/dp_60"
                       android:layout_height="0.5dp"
                       android:background="@mipmap/onter_background"/>
               </LinearLayout>
               <LinearLayout
                   android:layout_marginTop="@dimen/dp_30"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal">
                   <LinearLayout
                       android:gravity="center"
                       android:layout_width="wrap_content"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <ImageView
                           android:layout_width="@dimen/dp_30"
                           android:layout_height="@dimen/dp_30"
                           android:background="@mipmap/enter_weixi"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="微信登录"
                           android:textSize="@dimen/sp_14"
                           android:layout_marginTop="@dimen/dp_10"
                           android:textColor="#9a9a9a"/>
                   </LinearLayout>
                   <LinearLayout
                       android:gravity="center"
                       android:layout_width="wrap_content"
                       android:layout_weight="1"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
                       <ImageView
                           android:layout_width="@dimen/dp_30"
                           android:layout_height="@dimen/dp_30"
                           android:background="@mipmap/enter_qq"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="QQ登入"
                           android:textSize="@dimen/sp_14"
                           android:layout_marginTop="@dimen/dp_10"
                           android:textColor="#9a9a9a"/>
                   </LinearLayout>
               </LinearLayout>
           </LinearLayout>
       </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/dp_22">
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:background="@mipmap/not_select"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录即代表您已同意"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/colorUnselected"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="《振飞隐私政策》"
            android:textColor="#2B54EC"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>
</RelativeLayout>