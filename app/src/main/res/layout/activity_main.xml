<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F6F6F6"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:id="@+id/fragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0"
            android:layout_weight="1"></FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:layout_weight="0">
            <LinearLayout
                android:id="@+id/home_fragment"
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_home"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:background="@mipmap/home_red"/>
                <TextView
                    android:layout_marginTop="@dimen/dp_5"
                    android:id="@+id/title_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页"
                    android:textColor="@color/colorSelect"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/classify_fragment"
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_classify"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:background="@mipmap/classify_ash"/>
                <TextView
                    android:id="@+id/title_classify"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分类"
                    android:textColor="@color/colorUnselected"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:id="@+id/shopcar_fragment"
                android:layout_width="@dimen/dp_0"
                android:paddingTop="@dimen/dp_5"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
               <RelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:layout_centerHorizontal="true"
                       android:id="@+id/img_shopcar"
                       android:layout_width="@dimen/dp_22"
                       android:layout_height="@dimen/dp_22"
                       android:background="@mipmap/shop_car_ash"/>

                    <TextView
                        android:layout_marginLeft="@dimen/dp_20"
                        android:visibility="gone"
                        android:id="@+id/number_shopcar"
                        android:paddingTop="@dimen/dp_2"
                        android:paddingBottom="@dimen/dp_2"
                        android:paddingRight="@dimen/dp_5"
                        android:paddingLeft="@dimen/dp_5"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#ffffff"
                        android:textSize="@dimen/sp_8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/circle_drawable"
                        />
               </RelativeLayout>
                <TextView
                    android:gravity="center"
                    android:id="@+id/title_shopcar"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购物车"
                    android:textColor="@color/colorUnselected"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/my_fragment"
                android:gravity="center"
                android:paddingTop="@dimen/dp_5"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/img_my"
                    android:layout_width="@dimen/dp_22"
                    android:layout_height="@dimen/dp_22"
                    android:background="@mipmap/my_ash"/>
                <TextView
                    android:id="@+id/title_my"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:textColor="@color/colorUnselected"
                    android:textStyle="bold"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>