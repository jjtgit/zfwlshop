<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activity.OrderFormDetailsActivity">
    <LinearLayout
        android:id="@+id/head"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_13"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_36">
        <RelativeLayout
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/return_ofdetails"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_18"
                android:background="@mipmap/return_blask" />
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款详情"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_17"
                android:layout_marginLeft="@dimen/dp_20"/>
        </RelativeLayout>
    </LinearLayout>
   <androidx.core.widget.NestedScrollView
       android:layout_below="@+id/head"
       android:layout_marginBottom="@dimen/dp_60"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/dp_147"
               android:layout_marginTop="@dimen/dp_10"
               android:background="@mipmap/orderform_background"
               android:paddingRight="@dimen/dp_30"
               android:paddingLeft="@dimen/dp_46">
               <LinearLayout
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:gravity="center_vertical"
                   >
                   <TextView
                       android:id="@+id/state_ofdetails"
                       android:layout_marginTop="@dimen/dp_16"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="@dimen/sp_16"
                       android:textColor="@color/white"
                       android:text="待付款"/>
                   <TextView
                       android:id="@+id/time_state_ofdetails"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="还剩23小时58分自动取消"
                       android:layout_marginTop="@dimen/dp_15"
                       android:textColor="@color/white"
                       android:textSize="@dimen/sp_14"/>
               </LinearLayout>
               <ImageView
                   android:visibility="gone"
                   android:id="@+id/carriage_ofdetails"
                   android:layout_width="@dimen/dp_76"
                   android:layout_height="@dimen/dp_61"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:background="@mipmap/trucks_img"/>
           </RelativeLayout>
           <LinearLayout
