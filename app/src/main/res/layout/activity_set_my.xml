<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:context=".activity.SetMyActivity">
    <LinearLayout
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_13"
        android:paddingTop="@dimen/dp_37"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_30"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_17"
                    android:src="@mipmap/return_blask"/>
            </LinearLayout>
            <TextView
                android:id="@+id/text_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="设置"
                android:textSize="@dimen/sp_17"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_15"
        android:paddingTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dp_16"
        android:background="@drawable/home_ellipse"
        android:paddingRight="@dimen/dp_16">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清除本地缓存"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/unselected" />
        <ImageView
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/img_more"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_12"
            android:background="@mipmap/more"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.75M"
            android:textColor="@color/colorUnselected"
            android:textSize="@dimen/sp_14"
            android:layout_toLeftOf="@id/img_more"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:padding="@dimen/dp_15"
        android:background="@drawable/home_ellipse">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="清除本地缓存"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/unselected" />
            <ImageView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_12"
                android:background="@mipmap/more"/>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewbackground"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="隐私设置"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/unselected" />
            <ImageView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_12"
                android:background="@mipmap/more"/>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewbackground"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关于"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/unselected" />
            <ImageView
                android:layout_marginLeft="@dimen/dp_5"
                android:id="@+id/img_inregard_to"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_12"
                android:background="@mipmap/more"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="V1.0"
                android:textColor="@color/colorUnselected"
                android:textSize="@dimen/sp_14"
                android:layout_toLeftOf="@id/img_inregard_to"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>