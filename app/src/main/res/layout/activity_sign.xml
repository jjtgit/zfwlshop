<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.SignActivity">
    <LinearLayout
        android:id="@+id/return_sign"
        android:layout_marginTop="@dimen/dp_38"
        android:paddingLeft="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_20">
        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_17"
            android:background="@mipmap/return_blask"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_25"
            android:paddingRight="@dimen/dp_25"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="注册"
                android:textSize="@dimen/sp_24"
                android:textColor="@color/unselected"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_58"/>
            <EditText
                android:id="@+id/phone_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_44"
                android:background="@null"
                android:hint="请输入手机号"
                android:text="" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@mipmap/onter_background"/>
           <RelativeLayout
               android:layout_marginTop="@dimen/dp_35"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <EditText
                   android:id="@+id/verification_code_edit"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@null"
                   android:layout_toLeftOf="@+id/code_layout"
                   android:hint="请输入验证码"
                   android:text="" />
               <LinearLayout
                   android:layout_alignParentRight="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:id="@+id/code_layout"
                   android:orientation="horizontal">
                   <TextView
                       android:id="@+id/send_code"
                       android:visibility="visible"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingLeft="@dimen/dp_15"
                       android:paddingRight="@dimen/dp_15"
                       android:paddingTop="@dimen/dp_5"
                       android:paddingBottom="@dimen/dp_5"
                       android:textColor="@color/verificationCode"
                       android:text="发送验证码"/>
                   <TextView
                       android:visibility="gone"
                       android:id="@+id/verification_code"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingLeft="@dimen/dp_15"
                       android:paddingRight="@dimen/dp_15"
                       android:paddingTop="@dimen/dp_5"
                       android:paddingBottom="@dimen/dp_5"
                       android:textColor="@color/colorUnselected"
                       android:text="重新发送(60)"/>
               </LinearLayout>
           </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@mipmap/onter_background"/>
            <TextView
                android:id="@+id/not_nextstep_button"
                android:visibility="gone"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_45"
                android:paddingBottom="@dimen/dp_14"
                android:paddingTop="@dimen/dp_14"
                android:background="@drawable/login"
                android:text="下一步"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/white"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/nextstep_button"
                android:visibility="visible"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_45"
                android:paddingBottom="@dimen/dp_14"
                android:paddingTop="@dimen/dp_14"
                android:background="@drawable/login_ash"
                android:text="下一步"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/unselected"
                android:textStyle="bold"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>