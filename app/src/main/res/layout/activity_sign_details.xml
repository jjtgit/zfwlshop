<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.SignDetailsActivity">
    <LinearLayout
        android:id="@+id/return_signdet"
        android:layout_marginTop="@dimen/dp_38"
        android:paddingLeft="@dimen/dp_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/dp_20">
        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_17"
            android:background="@mipmap/return_blask"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_25"
        android:paddingRight="@dimen/dp_25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:text="注册"
            android:textSize="@dimen/sp_24"
            android:textColor="@color/unselected"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_58"/>
        <EditText
            android:id="@+id/name_edit_signdet"
            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_44"
            android:background="@null"
            android:hint="请输入用户名"
            android:text="" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@mipmap/onter_background"/>
        <EditText
            android:id="@+id/password_edit_signdet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@null"
            android:singleLine="true"
            android:password="true"
            android:hint="请输入密码"
            android:text="" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@mipmap/onter_background"/>
        <EditText
            android:id="@+id/affirm_password_edi_signdett"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:background="@null"
            android:singleLine="true"
            android:password="true"
            android:hint="请确认密码"
            android:text="" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@mipmap/onter_background"/>

        <TextView
            android:id="@+id/login_button_signdet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_45"
            android:background="@drawable/login"
            android:gravity="center"
            android:paddingTop="@dimen/dp_14"
            android:paddingBottom="@dimen/dp_14"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:textStyle="bold"
            android:visibility="gone" />
        <TextView
            android:visibility="visible"
            android:id="@+id/not_login_button_signdet"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_45"
            android:paddingBottom="@dimen/dp_14"
            android:paddingTop="@dimen/dp_14"
            android:background="@drawable/login_ash"
            android:text="注册"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/unselected"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>