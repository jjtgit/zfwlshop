<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SiteMyActivity">
    <LinearLayout
        android:id="@+id/head"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_13"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_36">
        <RelativeLayout
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/return_mysite"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_18"
                android:background="@mipmap/return_blask" />
            <TextView
                android:id="@+id/title_header"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编辑收货地址"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_17"
                android:layout_marginLeft="@dimen/dp_20"/>
            <ImageView
                android:visibility="visible"
                android:id="@+id/delete_img_site"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_17"
                android:background="@mipmap/search_dustbin"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/site_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/head"
        android:orientation="vertical"
        android:background="@drawable/pop_up_ellipse"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:paddingTop="@dimen/dp_20"
        android:paddingBottom="@dimen/dp_20">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_14"
                android:text="收货人"/>
            <EditText
                android:id="@+id/name_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textColorHint="@color/colorUnselected"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_14"
                android:maxLength="10"
                android:singleLine="true"
                android:background="@null"
                android:hint="请填写收货人姓名"/>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/background"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_14"
                android:text="联系电话"/>
            <EditText
                android:id="@+id/home_edit"
                android:digits="1234567890"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textColorHint="@color/colorUnselected"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_14"
                android:maxLength="11"
                android:singleLine="true"
                android:background="@null"
                android:hint="请填写收货人电话"/>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/background"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_14"
                android:text="所在地区"/>
            <TextView
                android:id="@+id/region_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textColorHint="@color/colorUnselected"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_14"
                android:text="省、市、区、乡镇等"/>
        </LinearLayout>
        <View
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/background"/>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_14"
                android:text="详细地址"/>
            <EditText
                android:id="@+id/detailed_address_edit"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:textColorHint="@color/colorUnselected"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_14"
                android:background="@null"
                android:hint="请输入详细地址"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@id/site_layout"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:orientation="horizontal"
        android:background="@drawable/pop_up_ellipse">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设为默认地址"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/unselected"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="提醒：每次下单会默认推荐该地址"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/not_img"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_23"
            android:layout_centerVertical="true"
            android:background="@mipmap/not_default"/>
        <ImageView
            android:id="@+id/select_img"
            android:visibility="visible"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_23"
            android:layout_centerVertical="true"
            android:background="@mipmap/select_default"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/butten"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background"
        android:paddingLeft="@dimen/dp_31"
        android:paddingRight="@dimen/dp_31"
        android:paddingBottom="@dimen/dp_15">
        <TextView
            android:id="@+id/butten_site"
            android:paddingTop="@dimen/dp_12"
            android:paddingBottom="@dimen/dp_12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="保存收货地址"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_15"
            android:textStyle="bold"
            android:background="@drawable/site_butten"/>
    </LinearLayout>
</RelativeLayout>