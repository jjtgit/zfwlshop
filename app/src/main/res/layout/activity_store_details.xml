<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".activity.StoreDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_38"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_13"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_centerVertical="true"
                android:id="@+id/return_amend"
                android:paddingLeft="@dimen/dp_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/dp_20">
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_17"
                    android:background="@mipmap/return_blask"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="店铺详情"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/unselected"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:overScrollMode="never"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/home_ellipse"
                android:padding="@dimen/dp_15">

                <ImageView
                    android:id="@+id/store_img_details"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:background="@mipmap/home_shop_img1" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@id/store_img_details"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="曼秀雷敦官方旗舰店"
                        android:maxEms="9"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/unselected"
                        android:textSize="@dimen/sp_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:text="199.2万人关注"
                        android:textColor="@color/colorUnselected"
                        android:textSize="@dimen/sp_10" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/attention_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/attention_ellipse"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_6"
                    android:paddingRight="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_6"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_12"
                        android:background="@mipmap/attention" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:text="关注"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <TextView
                    android:id="@+id/not_attention_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/not_attention_ellipse"
                    android:gravity="center"
                    android:paddingLeft="@dimen/dp_12"
                    android:paddingTop="@dimen/dp_7"
                    android:paddingRight="@dimen/dp_12"
                    android:paddingBottom="@dimen/dp_7"
                    android:text="已关注"
                    android:textColor="@color/colorUnselected"
                    android:textSize="@dimen/sp_13"
                    android:visibility="gone" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/home_ellipse"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_15">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="店铺星级"
                        android:textColor="@color/textGray"
                        android:textSize="@dimen/sp_12"/>
                    <com.zfwl.zhengfeishop.utils.RatingBarUtils
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:starCount="5"
                        android:id="@+id/rb_evaluate"
                        android:layout_marginLeft="@dimen/dp_25"
                        app:starEmpty="@mipmap/not_grade"
                        app:starFill="@mipmap/grade"
                        app:starHalf="@mipmap/half_appraise"
                        app:starImageSize="@dimen/dp_15"
                        app:starPadding="@dimen/dp_2"
                        app:starStep="0"
                        app:stepSize="Half"></com.zfwl.zhengfeishop.utils.RatingBarUtils>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="描述相符"
                        android:textColor="@color/textGray"
                        android:textSize="@dimen/sp_12"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:text="5.64分"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/colorSelect"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="低"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/colorSelect"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务态度"
                        android:textColor="@color/textGray"
                        android:textSize="@dimen/sp_12"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:text="9.89分"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/colorSelect"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="高"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/colorSelect"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="物流速度"
                        android:textColor="@color/textGray"
                        android:textSize="@dimen/sp_12"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_25"
                        android:text="7.90分"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/colorSelect"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="中"
                        android:textSize="@dimen/sp_12"
                        android:textColor="@color/colorSelect"/>
                </LinearLayout>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/home_ellipse"
            android:layout_marginTop="@dimen/dp_10"
            android:padding="@dimen/dp_15">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/unselected"
                    android:textSize="@dimen/sp_14"
                    android:text="店铺简介"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="主营葡萄酒 洋酒 白酒"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textSize="@dimen/sp_14"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/textGray"/>
            </LinearLayout>
            <ImageView
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@mipmap/onter_background"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/unselected"
                    android:textSize="@dimen/sp_14"
                    android:text="所在地区"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="北京朝阳区"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textSize="@dimen/sp_14"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/textGray"/>
            </LinearLayout>
            <ImageView
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@mipmap/onter_background"/>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/unselected"
                    android:textSize="@dimen/sp_14"
                    android:text="开店时间"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018-08-21"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:textSize="@dimen/sp_14"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/textGray"/>
            </LinearLayout>
        </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>