<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".activity.UserMessageActivity">
    <LinearLayout
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:paddingBottom="@dimen/dp_13"
        android:paddingTop="@dimen/dp_37"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/return_layout"
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_30"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_17"
                    android:src="@mipmap/return_blask"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="个人信息"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_17"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_ellipse"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="头像"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/unselected" />
       <LinearLayout
           android:id="@+id/head_layout"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           android:gravity="center"
           android:orientation="horizontal">
           <ImageView
               android:id="@+id/head_img"
               android:layout_width="@dimen/dp_45"
               android:layout_height="@dimen/dp_45"
               android:background="@mipmap/img_head"/>
           <ImageView
               android:layout_marginLeft="@dimen/dp_5"
               android:layout_width="@dimen/dp_7"
               android:layout_height="@dimen/dp_12"
               android:background="@mipmap/more"/>
       </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="vertical"
        android:padding="@dimen/dp_15"
        android:background="@drawable/home_ellipse">
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/unselected" />
            <TextView
                android:id="@+id/name_text"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="food"
                android:textColor="@color/colorUnselected"
                android:textSize="@dimen/sp_14"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewbackground"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/unselected" />
           <LinearLayout
               android:id="@+id/nickname_layout"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_width="wrap_content"
               android:gravity="center"
               android:layout_height="wrap_content"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/nickname_text"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="此用户以成仙"
                   android:textColor="@color/colorUnselected"
                   android:textSize="@dimen/sp_14"
                   />
               <ImageView
                   android:layout_marginLeft="@dimen/dp_5"
                   android:id="@+id/img_nickname"
                   android:layout_width="@dimen/dp_7"
                   android:layout_height="@dimen/dp_12"
                   android:background="@mipmap/more"/>
           </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewbackground"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/unselected" />
            <LinearLayout
                android:id="@+id/sex_layout"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/sex_text"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textColor="@color/colorUnselected"
                    android:textSize="@dimen/sp_14"/>
                <ImageView
                    android:layout_marginLeft="@dimen/dp_5"
                    android:id="@+id/img_sex"
                    android:layout_width="@dimen/dp_7"
                    android:layout_height="@dimen/dp_12"
                    android:background="@mipmap/more"/>
            </LinearLayout>
        </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/viewbackground"/>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生日"
                android:textSize="@dimen/sp_16"
                android:textColor="@color/unselected" />
           <LinearLayout
               android:id="@+id/birthday_layout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/birthday_text"
                   android:layout_centerVertical="true"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="1980年7月1日"
                   android:textColor="@color/colorUnselected"
                   android:textSize="@dimen/sp_14"/>
               <ImageView
                   android:layout_marginLeft="@dimen/dp_5"
                   android:id="@+id/img_birthday"
                   android:layout_width="@dimen/dp_7"
                   android:layout_height="@dimen/dp_12"
                   android:background="@mipmap/more"/>
           </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>