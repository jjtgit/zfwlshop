<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="@drawable/classify_shop_ellipse"
    android:paddingBottom="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/dp_160"
        android:layout_height="@dimen/dp_180"
        android:id="@+id/img_sclassify"
        android:background="@mipmap/home_shop_img1"/>
    <TextView
        android:id="@+id/name_sclassify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="彩色灯泡灯"
        android:textSize="@dimen/sp_13"
        android:textColor="@color/unselected"
        android:layout_marginTop="@dimen/dp_10"/>
    <TextView
        android:id="@+id/synopsis_sclassify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:text="优质材质，放心使用"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/colorUnselected"
        android:layout_marginTop="@dimen/dp_10"/>
    <RelativeLayout
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignBottom="@id/price_sclassify"
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥"
            android:textColor="@color/colorSelect"
            android:textSize="@dimen/sp_13"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_4"
            android:id="@+id/price_sclassify"
            android:layout_toRightOf="@id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="369"
            android:textColor="@color/colorSelect"
            android:textSize="@dimen/sp_15"/>
    </RelativeLayout>
</LinearLayout>