<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_15"
    android:background="@drawable/home_ellipse">
    <LinearLayout
        android:layout_width="@dimen/dp_87"
        android:layout_height="@dimen/dp_87"
        android:gravity="center"
        android:background="@mipmap/discounts_background"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginBottom="@dimen/dp_5"
                android:textStyle="bold"
                android:id="@+id/price"
                android:layout_alignBottom="@id/price_stayuse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/colorSelect"/>
            <TextView
                android:id="@+id/price_stayuse"
                android:layout_toRightOf="@id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="20"
                android:textColor="@color/colorSelect"
                android:textSize="@dimen/dp_27"
                android:textStyle="bold"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="优惠卷"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/colorSelect"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="劵"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_10"
                    android:background="@mipmap/character_background"/>
                <TextView
                    android:id="@+id/name_stayuse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="生鲜专场劵"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/unselected"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/dp_6"/>
            </LinearLayout>
            <TextView
                android:id="@+id/time_stayuse"
                android:layout_marginTop="@dimen/dp_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期至：2020-11-26"
                android:textSize="@dimen/sp_11"
                android:textColor="@color/colorUnselected"/>
            <TextView
                android:id="@+id/limit_stayuse"
                android:layout_marginTop="@dimen/sp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="满10元可用、限购买生鲜"
                android:paddingLeft="@dimen/dp_7"
                android:paddingBottom="@dimen/dp_4"
                android:paddingRight="@dimen/dp_7"
                android:paddingTop="@dimen/dp_4"
                android:textColor="@color/colorSelect"
                android:textSize="@dimen/sp_10"
                android:background="@mipmap/circular_bead_background"/>
        </LinearLayout>
        <TextView
            android:id="@+id/use_button_stayuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="立即使用"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/white"
            android:padding="@dimen/dp_8"
            android:layout_alignParentRight="true"
            android:background="@drawable/get_ellipse"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</LinearLayout>