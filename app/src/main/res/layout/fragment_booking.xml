<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@drawable/shop_ellipse"
    android:paddingBottom="@dimen/dp_9"
    android:paddingLeft="@dimen/sp_12"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_item_booking"
        android:layout_width="@dimen/dp_97"
        android:layout_height="@dimen/dp_97"
        android:background="@mipmap/booking_img"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_item_booking"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:text="榨汁机家用水果小型全自动果"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/unselected"/>
        <TextView
            android:id="@+id/num_item_booking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已团156件"
            android:textSize="@dimen/sp_10"
            android:layout_marginTop="@dimen/dp_9"
            android:textColor="@color/colorUnselected"
            />
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/price_booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥981"
                android:textColor="@color/colorSelect"
                android:textSize="@dimen/sp_14"
                />
            <TextView
                android:id="@+id/not_price_booking"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_alignBottom="@id/price_booking"
                android:layout_toRightOf="@id/price_booking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥1235"
                android:textSize="@dimen/sp_10"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@mipmap/person_num_background">
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_11"
                    android:background="@mipmap/item_group_booking"/>
                <TextView
                    android:id="@+id/number_item_booking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/colorSelect"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:text="6人团"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@mipmap/open_background">
                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_11"
                    android:background="@mipmap/shop_car_ash"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:text="去开团"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>