<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/dp_10"
            android:background="@drawable/recommend_ellipse"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/img"
                    android:layout_width="@dimen/dp_19"
                    android:layout_height="@dimen/dp_16"
                    android:background="@mipmap/exclusive_img"
                    />
                <TextView
                    android:layout_toRightOf="@id/img"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专属推荐"
                    android:textColor="@color/unselected"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold"
                    />
                <LinearLayout
                    android:id="@+id/change_the_layout"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="换一换"
                        android:textSize="@dimen/sp_11"
                        android:textColor="@color/colorUnselected"/>
                    <ImageView
                        android:layout_marginLeft="@dimen/dp_3"
                        android:layout_width="@dimen/dp_11"
                        android:layout_height="@dimen/dp_11"
                        android:background="@mipmap/change_img"
                        android:layout_alignParentRight="true"/>
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_timelimit1"
                        android:layout_width="@dimen/dp_96"
                        android:layout_height="@dimen/dp_96"
                        android:background="@mipmap/booking_img"
                        />
                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_alignBottom="@id/price_timelimit1"
                            android:id="@+id/price1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="@color/colorSelect"
                            android:textSize="@dimen/dp_12"/>
                        <TextView
                            android:id="@+id/price_timelimit1"
                            android:layout_toRightOf="@id/price1"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="34.9"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/colorSelect"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_timelimit2"
                        android:layout_width="@dimen/dp_96"
                        android:layout_height="@dimen/dp_96"
                        android:background="@mipmap/booking_img"
                        />
                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_alignBottom="@id/price_timelimit2"
                            android:id="@+id/price2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="@color/colorSelect"
                            android:textSize="@dimen/dp_12"/>
                        <TextView
                            android:id="@+id/price_timelimit2"
                            android:layout_toRightOf="@id/price2"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="34.9"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/colorSelect"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_width="@dimen/dp_0"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/img_timelimit3"
                        android:layout_width="@dimen/dp_96"
                        android:layout_height="@dimen/dp_96"
                        android:background="@mipmap/booking_img"
                        />
                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_alignBottom="@id/price_timelimit3"
                            android:id="@+id/price3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥"
                            android:textColor="@color/colorSelect"
                            android:textSize="@dimen/dp_12"/>
                        <TextView
                            android:id="@+id/price_timelimit3"
                            android:layout_toRightOf="@id/price3"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="34.9"
                            android:textSize="@dimen/sp_15"
                            android:textColor="@color/colorSelect"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_height="match_parent"
            android:id="@+id/rv_timelimit"></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>