<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="@drawable/shop_ellipse"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_fresh"
        android:layout_width="@dimen/dp_159"
        android:layout_height="@dimen/dp_155"
        android:background="@mipmap/this_locality_img"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_14"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_fresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="半仙超市"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold"
                android:textColor="@color/unselected"
                />
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_alignParentRight="true"
               android:layout_alignBottom="@+id/name_fresh"
               android:gravity="center">
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@mipmap/this_locality_location"
                   />
               <TextView
                   android:layout_marginLeft="@dimen/dp_3"
                   android:id="@+id/distance_fresh"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="3.4km"
                   android:textSize="@dimen/sp_10"
                   android:textColor="@color/colorUnselected"
                   />
           </LinearLayout>
        </RelativeLayout>
        <TextView
            android:id="@+id/introduce_fresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:text="本超市一切都有，只要你敢想"
            android:textColor="@color/colorUnselected"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/sp_10"/>
    </LinearLayout>
</LinearLayout>