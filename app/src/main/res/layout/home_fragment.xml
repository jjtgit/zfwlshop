<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#F6F6F6"
    android:paddingBottom="@dimen/dp_5"
    android:layout_height="match_parent">
          <RelativeLayout
              android:id="@+id/search_rl_top"
              android:background="#DE1D13"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <RelativeLayout
                  android:layout_marginTop="@dimen/dp_30"
                  android:id="@+id/search_layout"
                  android:layout_width="match_parent"
                  android:layout_marginRight="@dimen/dp_16"
                  android:layout_height="@dimen/dp_44">

                  <TextView
                      android:id="@+id/search_iv_back"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="振飞商城"
                      android:textSize="@dimen/sp_17"
                      android:textColor="#ffffff"
                      android:layout_alignParentLeft="true"
                      android:layout_centerVertical="true"
                      android:layout_marginLeft="@dimen/dp_17"
                      />
                  <LinearLayout
                      android:id="@+id/sean_home"
                      android:layout_centerVertical="true"
                      android:layout_alignParentRight="true"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center">
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:background="@mipmap/home_scan"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/dp_2"
                          android:text="扫一扫"
                          android:textSize="@dimen/sp_9"
                          android:textColor="@color/white"/>
                  </LinearLayout>
                  <LinearLayout
                      android:layout_marginRight="@dimen/dp_20"
                      android:id="@+id/message_home"
                      android:layout_centerVertical="true"
                      android:layout_toLeftOf="@+id/sean_home"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:gravity="center">
                      <ImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:background="@mipmap/home_message"/>
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginTop="@dimen/dp_2"
                          android:text="消息"
                          android:textSize="@dimen/sp_9"
                          android:textColor="@color/white"/>
                  </LinearLayout>
              </RelativeLayout>

              <LinearLayout
                  android:id="@+id/search_ll_search"
                  android:layout_width="match_parent"
                  android:layout_height="@dimen/dp_35"
                  android:layout_alignParentLeft="true"
                  android:layout_marginTop="@dimen/dp_79"
                  android:layout_marginLeft="@dimen/dp_16"
                  android:layout_marginRight="@dimen/dp_16"
                  android:layout_marginBottom="@dimen/dp_10"
                  android:background="@drawable/search_ellipse"
                  android:gravity="center_vertical"
                  android:orientation="horizontal"
                  android:visibility="visible">

                  <ImageView
                      android:layout_width="@dimen/dp_16"
                      android:layout_height="@dimen/dp_16"
                      android:layout_marginLeft="@dimen/dp_10"
                      android:src="@mipmap/search" />

                  <TextView
                      android:id="@+id/search_tv_search"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:layout_marginLeft="@dimen/dp_9"
                      android:layout_marginRight="@dimen/dp_10"
                      android:layout_weight="1"
                      android:cursorVisible="false"
                      android:textColor="#999999"
                      android:gravity="center_vertical"
                      android:hint="客官您要搜点什么"
                      android:textSize="@dimen/sp_12" />

              </LinearLayout>
          </RelativeLayout>
      <com.zfwl.zhengfeishop.utils.AnimationNestedScrollView
          android:layout_below="@+id/search_rl_top"
          android:id="@+id/search_sv_view"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:descendantFocusability="blocksDescendants"
              android:orientation="vertical">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
                  <ImageView
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/dp_96"
                      android:background="@mipmap/home_head"/>
                  <com.stx.xhb.androidx.XBanner
                      android:id="@+id/xbanner_home"
                      android:layout_width="match_parent"
                      android:layout_marginLeft="@dimen/dp_16"
                      android:layout_marginRight="@dimen/dp_16"
                      android:background="@mipmap/home_banner"
                      android:layout_height="@dimen/dp_135"
                      app:AutoPlayTime="3000"
                      app:pointNormal="@mipmap/home_banner_uncheck"
                      app:pointSelect="@mipmap/home_banner_select"
                      app:pointsPosition="CENTER"
                      app:isAutoPlay="true"
                      app:isShowIndicatorOnlyOne="false">
                  </com.stx.xhb.androidx.XBanner>
              </RelativeLayout>
              <LinearLayout
                  android:layout_marginTop="@dimen/dp_15"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                  <LinearLayout
                      android:id="@+id/integral_layout"
                      android:layout_width="@dimen/dp_0"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
                      <ImageView
                          android:layout_width="@dimen/dp_40"
                          android:layout_height="@dimen/dp_40"
                          android:background="@mipmap/home_integral"/>
                      <TextView
                          android:layout_marginTop="@dimen/dp_5"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="积分商城"
                          android:textColor="#666666"
                          android:textSize="@dimen/sp_11"/>
                  </LinearLayout>
                  <LinearLayout
                      android:id="@+id/lead_layout"
                      android:layout_width="@dimen/dp_0"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
                      <ImageView
                          android:layout_width="@dimen/dp_40"
                          android:layout_height="@dimen/dp_40"
                          android:background="@mipmap/home_coupon"/>
                      <TextView
                          android:layout_marginTop="@dimen/dp_5"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="领劵"
                          android:textColor="#666666"
                          android:textSize="@dimen/sp_11"/>
                  </LinearLayout>
                  <LinearLayout
                      android:id="@+id/time_limit_layout"
                      android:layout_width="@dimen/dp_0"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
                      <ImageView
                          android:layout_width="@dimen/dp_40"
                          android:layout_height="@dimen/dp_40"
                          android:background="@mipmap/home_seckill"/>
                      <TextView
                          android:layout_marginTop="@dimen/dp_5"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="限时抢购"
                          android:textColor="#666666"
                          android:textSize="@dimen/sp_11"/>
                  </LinearLayout>
                  <LinearLayout
                      android:id="@+id/booking_layout"
                      android:layout_width="@dimen/dp_0"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
                      <ImageView
                          android:layout_width="@dimen/dp_40"
                          android:layout_height="@dimen/dp_40"
                          android:background="@mipmap/home_group_booking"/>
                      <TextView
                          android:layout_marginTop="@dimen/dp_5"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="拼团秒杀"
                          android:textColor="#666666"
                          android:textSize="@dimen/sp_11"/>
                  </LinearLayout>
              </LinearLayout>
              <LinearLayout
                  android:layout_marginTop="@dimen/dp_9"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">
                  <LinearLayout
                      android:id="@+id/ranking_layout"
                      android:layout_width="@dimen/dp_0"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
                      <ImageView
                          android:layout_width="@dimen/dp_40"
                          android:layout_height="@dimen/dp_40"
                          android:background="@mipmap/home_carry_out"/>
                      <TextView
                          android:layout_marginTop="@dimen/dp_5"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="排行榜"
                          android:textColor="#666666"
                          android:textSize="@dimen/sp_11"/>
                  </LinearLayout>
                  <LinearLayout
                      android:id="@+id/fresh_layout"
                      android:layout_width="@dimen/dp_0"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
                      <ImageView
                          android:layout_width="@dimen/dp_40"
                          android:layout_height="@dimen/dp_40"
                          android:background="@mipmap/home_fresh"/>
                      <TextView
                          android:layout_marginTop="@dimen/dp_5"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="本地生鲜"
                          android:textColor="#666666"
                          android:textSize="@dimen/sp_11"/>
                  </LinearLayout>
                  <LinearLayout
                      android:id="@+id/costume_layout"
                      android:layout_width="@dimen/dp_0"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
                      <ImageView
                          android:layout_width="@dimen/dp_40"
                          android:layout_height="@dimen/dp_40"
                          android:background="@mipmap/clothing"/>
                      <TextView
                          android:layout_marginTop="@dimen/dp_5"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="本地服饰"
                          android:textColor="#666666"
                          android:textSize="@dimen/sp_11"/>
                  </LinearLayout>
                  <LinearLayout
                      android:id="@+id/supermarket_layout"
                      android:layout_width="@dimen/dp_0"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:orientation="vertical"
                      android:layout_height="wrap_content">
                      <ImageView
                          android:layout_width="@dimen/dp_40"
                          android:layout_height="@dimen/dp_40"
                          android:background="@mipmap/home_supermarket"/>
                      <TextView
                          android:layout_marginTop="@dimen/dp_5"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="本地超市"
                          android:textColor="#666666"
                          android:textSize="@dimen/sp_11"/>
                  </LinearLayout>
              </LinearLayout>
              <LinearLayout
                  android:layout_marginTop="@dimen/dp_15"
                  android:paddingTop="@dimen/dp_10"
                  android:paddingLeft="@dimen/dp_10"
                  android:paddingBottom="@dimen/dp_15"
                  android:layout_marginLeft="@dimen/dp_16"
                  android:layout_marginRight="@dimen/dp_16"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/home_ellipse"
                  android:orientation="vertical">
                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingRight="@dimen/dp_10">

                      <TextView
                          android:id="@+id/text_time"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentBottom="true"
                          android:layout_marginBottom="0dp"
                          android:text="限时抢购"
                          android:textColor="#333333"
                          android:textSize="@dimen/sp_16"
                          android:textStyle="bold" />
                      <ImageView
                         android:layout_centerVertical="true"
                          android:layout_toRightOf="@+id/text_time"
                          android:layout_width="@dimen/dp_15"
                          android:layout_height="@dimen/dp_16"
                          android:layout_marginLeft="@dimen/dp_9"
                          android:background="@mipmap/home_time_limit"
                          />
                      <LinearLayout
                          android:gravity="center"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerInParent="true"
                          android:orientation="horizontal">
                          <TextView
                              android:id="@+id/time_home"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:background="@mipmap/home_time_background"
                              android:text="00"
                              android:paddingTop="@dimen/dp_3"
                              android:paddingBottom="@dimen/dp_3"
                              android:paddingRight="@dimen/dp_2"
                              android:paddingLeft="@dimen/dp_2"
                              android:textColor="@color/white"
                              android:textStyle="bold"
                              android:textSize="@dimen/sp_10"
                              />
                          <ImageView
                              android:layout_width="@dimen/dp_2"
                              android:layout_height="@dimen/dp_6"
                              android:layout_marginLeft="@dimen/dp_5"
                              android:background="@mipmap/home_time_circle"/>
                          <TextView
                              android:layout_marginLeft="@dimen/dp_5"
                              android:id="@+id/between_home"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:background="@mipmap/home_time_background"
                              android:text="00"
                              android:paddingTop="@dimen/dp_3"
                              android:paddingBottom="@dimen/dp_3"
                              android:paddingRight="@dimen/dp_2"
                              android:paddingLeft="@dimen/dp_2"
                              android:textColor="@color/white"
                              android:textStyle="bold"
                              android:textSize="@dimen/sp_10"
                              />
                          <ImageView
                              android:layout_width="@dimen/dp_2"
                              android:layout_height="@dimen/dp_6"
                              android:layout_marginLeft="@dimen/dp_5"
                              android:background="@mipmap/home_time_circle"/>
                          <TextView
                              android:layout_marginLeft="@dimen/dp_5"
                              android:id="@+id/second_home"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:background="@mipmap/home_time_background"
                              android:text="00"
                              android:paddingTop="@dimen/dp_3"
                              android:paddingBottom="@dimen/dp_3"
                              android:paddingRight="@dimen/dp_2"
                              android:paddingLeft="@dimen/dp_2"
                              android:textColor="@color/white"
                              android:textStyle="bold"
                              android:textSize="@dimen/sp_10"
                              />
                      </LinearLayout>
                      <LinearLayout
                          android:id="@+id/timelimit_more_layout"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentRight="true"
                          android:layout_centerVertical="true"
                          android:gravity="center"
                          android:orientation="horizontal">
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="更多"
                              android:textSize="@dimen/sp_11"
                              android:textColor="#999999"/>
                          <ImageView
                              android:layout_marginLeft="@dimen/dp_4"
                              android:layout_width="@dimen/dp_5"
                              android:layout_height="@dimen/dp_10"
                              android:background="@mipmap/more"/>
                      </LinearLayout>
                  </RelativeLayout>
                  <androidx.recyclerview.widget.RecyclerView
                      android:layout_marginTop="@dimen/dp_15"
                      android:id="@+id/timelimit_rv"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
              </LinearLayout>
          <LinearLayout
              android:layout_marginTop="@dimen/dp_15"
              android:paddingTop="@dimen/dp_10"
              android:paddingLeft="@dimen/dp_10"
              android:paddingBottom="@dimen/dp_15"
              android:layout_marginLeft="@dimen/dp_16"
              android:layout_marginRight="@dimen/dp_16"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/home_ellipse"
              android:orientation="vertical">
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingRight="@dimen/dp_10">
              <TextView
                  android:id="@+id/text_shop"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="团购商城"
                  android:textSize="@dimen/sp_16"
                  android:textColor="#333333"
                  android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_2"
                    android:paddingTop="@dimen/dp_2"
                    android:paddingRight="@dimen/dp_5"
                    android:background="@drawable/home_shop_ellipse"
                    android:text="优惠拼团包邮"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_11"
                    android:layout_toRightOf="@+id/text_shop"
                    android:layout_centerVertical="true"
                    />
                  <LinearLayout
                      android:id="@+id/grouppurchase_more_layout"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_alignParentRight="true"
                      android:layout_centerVertical="true"
                      android:gravity="center"
                      android:orientation="horizontal">
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="更多"
                          android:textSize="@dimen/sp_11"
                          android:textColor="#999999"/>
                      <ImageView
                          android:layout_marginLeft="@dimen/dp_4"
                          android:layout_width="@dimen/dp_5"
                          android:layout_height="@dimen/dp_10"
                          android:background="@mipmap/more"/>
                  </LinearLayout>
              </RelativeLayout>
              <androidx.recyclerview.widget.RecyclerView
                  android:layout_marginTop="@dimen/dp_15"
                  android:id="@+id/shop_rv"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
          </LinearLayout>
              <LinearLayout
                  android:layout_marginTop="@dimen/dp_15"
                  android:paddingTop="@dimen/dp_10"
                  android:paddingLeft="@dimen/dp_10"
                  android:paddingBottom="@dimen/dp_15"
                  android:layout_marginLeft="@dimen/dp_16"
                  android:layout_marginRight="@dimen/dp_16"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/home_ellipse"
                  android:orientation="vertical">
                  <RelativeLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:paddingRight="@dimen/dp_10">
                      <TextView
                          android:id="@+id/text_integral"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="积分商城"
                          android:textSize="@dimen/sp_16"
                          android:textColor="#333333"
                          android:textStyle="bold"/>
                      <LinearLayout
                          android:id="@+id/integral_more_layout"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentRight="true"
                          android:layout_centerVertical="true"
                          android:gravity="center"
                          android:orientation="horizontal">
                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="更多"
                              android:textSize="@dimen/sp_11"
                              android:textColor="#999999"/>
                          <ImageView
                              android:layout_marginLeft="@dimen/dp_4"
                              android:layout_width="@dimen/dp_5"
                              android:layout_height="@dimen/dp_10"
                              android:background="@mipmap/more"/>
                      </LinearLayout>
                  </RelativeLayout>
                  <androidx.recyclerview.widget.RecyclerView
                      android:layout_marginTop="@dimen/dp_15"
                      android:id="@+id/integral_rv"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
              </LinearLayout>
                <include
                    layout="@layout/home_recommend"/>
          </LinearLayout>

      </com.zfwl.zhengfeishop.utils.AnimationNestedScrollView>
  </RelativeLayout>