<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/dp_80"
    android:gravity="center"
    android:background="@color/white"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_integral"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:background="@mipmap/timelimit_img"/>
    <TextView
        android:id="@+id/name_integral"
        android:layout_marginTop="@dimen/dp_9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_13"
        android:textColor="#333333"
        android:text="智能按摩器"/>
    <TextView
        android:layout_marginTop="@dimen/dp_4"
        android:layout_toRightOf="@+id/price_log"
        android:id="@+id/price_integral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="769分"
        android:textStyle="bold"
        android:textSize="@dimen/sp_13"
        android:textColor="#DE1D13"/>
</LinearLayout>