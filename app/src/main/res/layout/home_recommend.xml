<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_20"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content">
           <LinearLayout
               android:id="@+id/recommend_layout"
               android:gravity="center"
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/name_recommend"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="推荐"
                   android:textStyle="bold"
                   android:textSize="@dimen/sp_13"
                   android:textColor="#DE1D13"
                   />
               <TextView
                   android:id="@+id/title_recommend"
                   android:layout_marginTop="@dimen/dp_4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="猜你喜欢"
                   android:textSize="@dimen/sp_12"
                   android:textColor="#DE1D13"
                   />
               <View
                   android:layout_width="@dimen/dp_48"
                   android:layout_height="@dimen/dp_2"
                   android:visibility="visible"
                   android:id="@+id/view_recommend"
                   android:layout_marginTop="@dimen/dp_5"
                   android:background="#DE1D13"/>

           </LinearLayout>
            <View
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:background="#EAEAEA"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/preference_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_preference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="特惠"
                    android:textColor="#333333"
                    android:textSize="@dimen/sp_13"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/title_preference"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="今日折扣"
                    android:textColor="#999999"
                    android:textSize="@dimen/sp_12" />

                <View
                    android:id="@+id/view_preference"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_5"
                    android:background="#DE1D13"
                    android:visibility="gone" />

            </LinearLayout>
            <View
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:background="#EAEAEA"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/electric_layout"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name_electric"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="厨房"
                    android:textSize="@dimen/sp_13"
                    android:textColor="#333333"
                    />
                <TextView
                    android:id="@+id/title_electric"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="品质厨房"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#999999"
                    />
                <View
                    android:visibility="gone"
                    android:id="@+id/view_electric"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_2"
                    android:background="#DE1D13"/>

            </LinearLayout>
            <View
                android:layout_centerVertical="true"
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_20"
                android:layout_alignParentRight="true"
                android:background="#EAEAEA"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="@dimen/dp_0"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/cate_layout"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name_cate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="美食"
                    android:textSize="@dimen/sp_13"
                    android:textColor="#333333"
                    />
                <TextView
                    android:id="@+id/title_cate"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="吃货必看"
                    android:textSize="@dimen/sp_12"
                    android:textColor="#999999"
                    />
                <View
                    android:visibility="gone"
                    android:id="@+id/view_cate"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_width="@dimen/dp_48"
                    android:layout_height="@dimen/dp_2"
                    android:background="#DE1D13"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <com.zfwl.zhengfeishop.utils.MyViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/page_recommend"></com.zfwl.zhengfeishop.utils.MyViewPager>
</LinearLayout>