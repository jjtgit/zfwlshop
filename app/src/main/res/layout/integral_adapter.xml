<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="@drawable/shop_ellipse"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_fresh"
        android:layout_width="@dimen/dp_155"
        android:layout_height="@dimen/dp_155"
        android:background="@mipmap/this_locality_img"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_14"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name_fresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智能数码半仙"
                android:textSize="@dimen/sp_13"
                android:textStyle="bold"
                android:textColor="@color/unselected"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/text_integral"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000 积分"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorSelect"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:id="@+id/conversion_integral"
                android:text="234人兑换"
                android:layout_alignBottom="@+id/text_integral"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>