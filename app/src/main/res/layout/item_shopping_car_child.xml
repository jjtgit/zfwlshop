<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dp_15"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingRight="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_select"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:background="@mipmap/not_select"/>
        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_70"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/collect_shop_img"/>
       <RelativeLayout
           android:layout_marginLeft="@dimen/sp_9"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:id="@+id/particulars_layout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">
               <TextView
                   android:id="@+id/tv_name"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="时尚精美女神挎包"
                   android:ellipsize="end"
                   android:maxLines="1"
                   android:textColor="@color/unselected"
                   android:textSize="@dimen/sp_12"/>
               <TextView
                   android:id="@+id/tv_size"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_9"
                   android:text="尺寸：155/80A/XS"
                   android:textSize="@dimen/sp_9"
                   android:textColor="@color/colorUnselected"/>
               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="@dimen/dp_10"
                   android:orientation="horizontal">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="￥"
                       android:textColor="@color/colorSelect"
                       android:textSize="@dimen/sp_11" />
                   <TextView
                       android:id="@+id/tv_price_value"
                       android:layout_marginLeft="@dimen/dp_3"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="809"
                       android:textSize="@dimen/sp_14"
                       android:textColor="@color/colorSelect"/>
               </LinearLayout>
           </LinearLayout>
           <LinearLayout
               android:id="@+id/item_layout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_alignParentRight="true"
               android:layout_alignBottom="@id/particulars_layout"
               android:layout_marginBottom="@dimen/dp_5">
               <LinearLayout
                   android:id="@+id/iv_edit_subtract"
                   android:layout_width="@dimen/dp_18"
                   android:layout_height="@dimen/dp_18"
                   android:gravity="center"
                   android:background="@mipmap/adder_subtractor"
                   android:orientation="horizontal">

                   <ImageView
                       android:id="@+id/img_subtractor"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:background="@mipmap/subtract_background" />
               </LinearLayout>
               <EditText
                   android:id="@+id/tv_edit_buy_number"
                   android:textSize="@dimen/sp_12"
                   android:layout_width="wrap_content"
                   android:background="@null"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:text="1"
                   android:textColor="@color/unselected"/>
               <LinearLayout
                   android:id="@+id/iv_edit_add"
                   android:layout_marginLeft="@dimen/dp_10"
                   android:layout_width="@dimen/dp_18"
                   android:layout_height="@dimen/dp_18"
                   android:gravity="center"
                   android:background="@mipmap/adder_subtractor"
                   android:orientation="horizontal">
                   <ImageView
                       android:layout_width="@dimen/dp_8"
                       android:layout_height="@dimen/dp_8"
                       android:background="@mipmap/plus_background"/>
               </LinearLayout>
           </LinearLayout>
       </RelativeLayout>
    </LinearLayout>
    <View
    android:visibility="visible"
    android:id="@+id/view"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/white" />
    <View
        android:visibility="visible"
        android:id="@+id/views"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white" />
    <View
        android:id="@+id/view_last"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:background="@color/background"
        android:visibility="gone" />
</LinearLayout>