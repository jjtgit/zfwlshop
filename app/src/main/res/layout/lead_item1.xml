<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:background="@drawable/shop_ellipse"
    android:paddingBottom="@dimen/dp_9"
    android:paddingLeft="@dimen/sp_12"
    android:paddingRight="@dimen/dp_15"
    android:paddingTop="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="@dimen/dp_89"
        android:layout_height="@dimen/dp_89"
        android:background="@mipmap/discounts_background"
        android:gravity="center">
        <RelativeLayout
            android:id="@+id/price_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignBottom="@id/price_lead"
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:layout_marginBottom="@dimen/dp_5"
                android:textColor="@color/colorSelect"
                android:textSize="@dimen/sp_13"/>
            <TextView
                android:id="@+id/price_lead"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="@dimen/sp_25"
                android:textColor="@color/colorSelect"
                android:textStyle="bold"/>
        </RelativeLayout>
        <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="优惠卷"
            android:textColor="@color/colorSelect"
            android:textSize="@dimen/sp_13"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_below="@id/price_layout"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lead_layout"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:padding="@dimen/dp_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="劵"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/white"
                android:background="@mipmap/stamp_background"/>
            <TextView
                android:id="@+id/name_lead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="生鲜专场劵"
                android:layout_marginLeft="@dimen/dp_6"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/time_lead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_below="@id/lead_layout"
            android:text="有效期至：2020—11—26"
            android:textColor="@color/colorUnselected"
            android:textSize="@dimen/sp_11"/>
        <TextView
            android:id="@+id/text_lead"
            android:paddingRight="@dimen/dp_9"
            android:paddingLeft="@dimen/dp_9"
            android:paddingBottom="@dimen/dp_3"
            android:paddingTop="@dimen/dp_3"
            android:layout_below="@id/time_lead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="满10元可用、限购买生鲜"
            android:textColor="@color/colorSelect"
            android:background="@mipmap/circular_bead_background"
            android:textSize="@dimen/sp_10"
            />
        <TextView
            android:id="@+id/get_lead"
            android:visibility="visible"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/get_ellipse"
            android:layout_alignParentRight="true"
            android:text="立即领取"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/not_get_lead"
            android:visibility="gone"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/not_get_ellipse"
            android:layout_alignParentRight="true"
            android:text="已领取"
            android:layout_centerVertical="true"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/white"/>
    </RelativeLayout>
</LinearLayout>