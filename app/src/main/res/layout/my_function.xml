<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_ellipse"
    android:paddingTop="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_15">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我的功能"
        android:textColor="@color/unselected"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"/>
    <View
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DADADA"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/integral_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_22"
                android:background="@mipmap/my_integral"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="我的积分"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/unselected"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/coupons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_22"
                android:background="@mipmap/my_coupon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="优惠卷"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/unselected"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/collect_shop_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_22"
                android:background="@mipmap/my_collect_shop"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="收藏商品"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/unselected"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/store_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:layout_width="@dimen/dp_25"
                android:layout_height="@dimen/dp_22"
                android:background="@mipmap/my_store"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:text="收藏店铺"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/unselected"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>