<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/home_ellipse"
    android:paddingTop="@dimen/dp_10"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_20"
    android:layout_marginTop="@dimen/dp_25"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="我的订单"
            android:textStyle="bold"
            android:textColor="@color/unselected"
            android:textSize="@dimen/sp_14"/>
        <LinearLayout
            android:id="@+id/order_form_my"
            android:layout_width="wrap_content"
            android:layout_weight="0"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部订单"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/colorUnselected"/>
            <ImageView
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_width="@dimen/dp_7"
                android:layout_height="@dimen/dp_12"
                android:background="@mipmap/more"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#DADADA"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <LinearLayout
           android:id="@+id/payment_layout"
       android:layout_width="wrap_content"
       android:layout_weight="1"
       android:gravity="center"
       android:layout_height="wrap_content"
       android:layout_marginTop="@dimen/dp_15"
       android:orientation="vertical">
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/payment_img"
               android:layout_marginTop="@dimen/dp_5"
               android:layout_width="@dimen/dp_25"
               android:layout_height="@dimen/dp_22"
               android:background="@mipmap/my_money"/>
           <TextView
               android:layout_toRightOf="@id/payment_img"
               android:layout_marginLeft="-8dp"
               android:id="@+id/num_payment_my"
               android:paddingBottom="@dimen/dp_1"
               android:paddingTop="@dimen/dp_1"
               android:paddingRight="@dimen/dp_5"
               android:paddingLeft="@dimen/dp_5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/circle_my"
               android:textColor="@color/white"
               android:textSize="@dimen/sp_10"
               android:text="4"/>
       </RelativeLayout>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="待付款"
           android:layout_marginTop="@dimen/dp_15"
           android:textSize="@dimen/sp_12"
           android:textColor="@color/unselected"/>
   </LinearLayout>
       <LinearLayout
           android:id="@+id/collect_layout"
           android:layout_width="wrap_content"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/dp_15"
           android:orientation="vertical">
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/collect_img"
                   android:layout_marginTop="@dimen/dp_5"
                   android:layout_width="@dimen/dp_25"
                   android:layout_height="@dimen/dp_22"
                   android:background="@mipmap/my_collect"/>
               <TextView
                   android:layout_toRightOf="@id/collect_img"
                   android:layout_marginLeft="-8dp"
                   android:id="@+id/num_collect_my"
                   android:paddingBottom="@dimen/dp_1"
                   android:paddingTop="@dimen/dp_1"
                   android:paddingRight="@dimen/dp_5"
                   android:paddingLeft="@dimen/dp_5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/circle_my"
                   android:textColor="@color/white"
                   android:textSize="@dimen/sp_10"
                   android:text="4"/>
           </RelativeLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="待收货"
               android:layout_marginTop="@dimen/dp_15"
               android:textSize="@dimen/sp_12"
               android:textColor="@color/unselected"/>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/comment_layout"
           android:layout_width="wrap_content"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/dp_15"
           android:orientation="vertical">
           <RelativeLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <ImageView
                   android:id="@+id/comment_img"
                   android:layout_marginTop="@dimen/dp_5"
                   android:layout_width="@dimen/dp_25"
                   android:layout_height="@dimen/dp_22"
                   android:background="@mipmap/my_comment"/>
               <TextView
                   android:layout_toRightOf="@id/comment_img"
                   android:layout_marginLeft="-8dp"
                   android:id="@+id/num_comment_my"
                   android:paddingBottom="@dimen/dp_1"
                   android:paddingTop="@dimen/dp_1"
                   android:paddingRight="@dimen/dp_5"
                   android:paddingLeft="@dimen/dp_5"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:background="@drawable/circle_my"
                   android:textColor="@color/white"
                   android:textSize="@dimen/sp_10"
                   android:text="4"/>
           </RelativeLayout>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="待评价"
               android:layout_marginTop="@dimen/dp_15"
               android:textSize="@dimen/sp_12"
               android:textColor="@color/unselected"/>
       </LinearLayout>
       <LinearLayout
           android:id="@+id/aftersale_layout"
           android:layout_width="wrap_content"
           android:layout_weight="1"
           android:gravity="center"
           android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/dp_15"
           android:orientation="vertical">
           <ImageView
               android:id="@+id/aftersale_img"
               android:layout_marginTop="@dimen/dp_5"
               android:layout_width="@dimen/dp_25"
               android:layout_height="@dimen/dp_22"
               android:background="@mipmap/my_after_sale"/>
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="退换/售后"
               android:layout_marginTop="@dimen/dp_15"
               android:textSize="@dimen/sp_12"
               android:textColor="@color/unselected"/>
       </LinearLayout>
   </LinearLayout>
</LinearLayout>