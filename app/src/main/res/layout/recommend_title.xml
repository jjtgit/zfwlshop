<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="@drawable/shop_ellipse"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_shop"
        android:layout_width="@dimen/dp_159"
        android:layout_height="@dimen/dp_180"
        android:background="@mipmap/home_shop_img1"/>
    <LinearLayout
        android:paddingBottom="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10">
        <TextView
            android:id="@+id/name_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/unselected"
            android:textSize="@dimen/sp_13"
            android:text="彩色灯泡灯"/>
        <TextView
            android:id="@+id/introduce_shop"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorUnselected"
            android:textSize="@dimen/sp_12"
            android:text="优质材质，放心使用"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_15">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/colorSelect"/>
            <TextView
                android:id="@+id/price_shop"
                android:layout_marginLeft="@dimen/dp_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="369"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/colorSelect"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>