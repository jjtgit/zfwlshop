<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/home_ellipse">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/shop_img"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_13"
            android:background="@mipmap/img_shop"/>
        <TextView
            android:id="@+id/name_shop_refund"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/shop_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="振飞商城旗舰店"
            android:textColor="@color/unselected"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/dp_5"/>
        <TextView
            android:id="@+id/text_refund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已退款"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/sp_13"
            android:textColor="#E01212"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_19"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/img_refund"
            android:layout_width="@dimen/dp_89"
            android:layout_height="@dimen/dp_89"
            android:background="@mipmap/img_order_form"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5">
            <TextView
                android:id="@+id/name_refund"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="@dimen/dp_5"
                android:text="曼秀雷敦新碧轻透防晒水凝乳，防晒离美肤,专业护肤"
                android:textSize="@dimen/sp_12"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/unselected"/>
            <LinearLayout
                android:id="@+id/category_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name_refund"
                android:layout_marginTop="@dimen/dp_8"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/category_refund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/textGray"
                    android:text="类别分类：户外防晒；"/>
                <TextView
                    android:id="@+id/weight_refund"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/textGray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="净含量：50ml"/>
            </LinearLayout>
            <TextView
                android:id="@+id/price_refund"
                android:layout_below="@id/category_layout"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款：￥ 100"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_14"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_25">
        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除记录"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/textGray"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:paddingRight="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                android:background="@mipmap/circular_bead_ash"/>
            <TextView
                android:id="@+id/refund_button"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看详情"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorSelect"
                android:paddingBottom="@dimen/dp_8"
                android:paddingTop="@dimen/dp_8"
                android:paddingRight="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                android:background="@mipmap/circular_bead_red"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>