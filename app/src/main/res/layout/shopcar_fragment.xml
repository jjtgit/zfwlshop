<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/background"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/head"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_13"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_36">
        <RelativeLayout
            android:paddingLeft="@dimen/dp_16"
            android:paddingRight="@dimen/dp_16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_header"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="购物车"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_17"
                android:layout_marginLeft="@dimen/dp_20"/>
            <TextView
                android:id="@+id/compile_shopcar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_14"
                android:text="编辑"/>
        </RelativeLayout>
    </LinearLayout>
    <ExpandableListView
        android:paddingLeft="@dimen/dp_16"
        android:paddingRight="@dimen/dp_16"
        android:visibility="visible"
        android:id="@+id/elv_shopping_car"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/background"
        android:divider="@null"
        android:groupIndicator="@null"
        android:layout_marginBottom="@dimen/dp_5"
        android:scrollbars="none"></ExpandableListView>
    <RelativeLayout
        android:id="@+id/bottom_shopcar"
        android:visibility="visible"
        android:paddingBottom="@dimen/dp_7"
        android:paddingTop="@dimen/dp_7"
        android:paddingRight="@dimen/dp_16"
        android:paddingLeft="@dimen/dp_16"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:gravity="center">
           <LinearLayout
               android:id="@+id/check_all_layout"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:orientation="horizontal">
               <ImageView
                   android:id="@+id/check_all_shopcar"
                   android:layout_width="@dimen/dp_15"
                   android:layout_height="@dimen/dp_15"
                   android:background="@mipmap/not_select"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="全选"
                   android:layout_marginLeft="@dimen/dp_5"
                   android:textSize="@dimen/sp_10"
                   android:textColor="@color/colorUnselected" />
           </LinearLayout>
            <LinearLayout
                android:visibility="visible"
                android:id="@+id/total_layout"
                android:layout_width="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="合计:"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/unselected"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="￥"
                    android:textColor="@color/colorSelect"
                    android:textSize="@dimen/sp_10"/>
                <TextView
                    android:id="@+id/price_shopcar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_2"
                    android:text="1618.00"
                    android:textColor="@color/colorSelect"
                    android:textSize="@dimen/sp_14"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/knot_layout"
            android:visibility="visible"
            android:background="@drawable/shop_car"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_18"
            android:paddingRight="@dimen/dp_18"
            android:paddingTop="@dimen/dp_11"
            android:gravity="center"
            android:paddingBottom="@dimen/dp_11">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="去结算"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/num_shopcar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_13"
                android:layout_marginLeft="@dimen/dp_2"
                android:text="(2)"/>
        </LinearLayout>

        <TextView
            android:id="@+id/delete_shopcar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_my"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_30"
            android:paddingTop="@dimen/dp_11"
            android:paddingRight="@dimen/dp_30"
            android:paddingBottom="@dimen/dp_11"
            android:text="删除"
            android:layout_alignParentRight="true"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_13"
            android:visibility="gone" />
    </RelativeLayout>
</LinearLayout>