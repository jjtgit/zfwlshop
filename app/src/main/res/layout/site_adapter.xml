<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="@dimen/dp_15"
    android:layout_marginBottom="@dimen/dp_10"
    android:background="@drawable/pop_up_ellipse">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginRight="@dimen/dp_42"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/name_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="半仙"
                android:textSize="@dimen/sp_15"
                android:textColor="@color/unselected"/>
            <TextView
                android:id="@+id/cellphone_site"
                android:layout_marginLeft="@dimen/dp_54"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15626963396"
                android:textColor="@color/unselected"
                android:textSize="@dimen/sp_15"
                />
            <TextView
                android:id="@+id/default_site"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认"
                android:textSize="@dimen/sp_9"
                android:textColor="@color/white"
                android:paddingBottom="@dimen/dp_2"
                android:paddingTop="@dimen/dp_2"
                android:paddingRight="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_13"
                android:background="@drawable/home_shop_ellipse"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/title_site"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="山东省聊城市冠县武训大道与杭州路交汇处振司杭州路武训大道的"
            android:textColor="@color/textGray"
            android:textSize="@dimen/sp_12"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/compile_site"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_15"
            android:background="@mipmap/site_compile"
            />
        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/colorUnselected"
            android:text="编辑"/>
    </LinearLayout>
</LinearLayout>