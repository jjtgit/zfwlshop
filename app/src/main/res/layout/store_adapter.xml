<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_up_ellipse"
    android:gravity="center_vertical"
    android:layout_marginTop="@dimen/dp_10"
    android:padding="@dimen/dp_15">
    <ImageView
        android:visibility="gone"
        android:id="@+id/not_select_store"
        android:layout_width="@dimen/dp_17"
        android:layout_height="@dimen/dp_17"
        android:background="@mipmap/not_select"
        android:layout_marginRight="@dimen/dp_16"/>
    <ImageView
        android:id="@+id/img_head_store"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:background="@mipmap/round_head"/>
    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nameshop_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="珀莱雅官方旗舰店"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/unselected"/>
        <TextView
            android:id="@+id/attention_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="37.1万人关注"
            android:textColor="@color/colorUnselected"
            android:textSize="@dimen/dp_8"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_8">
            <TextView
                android:id="@+id/label_store1"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_16"
                android:gravity="center"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/colorSelect"
                android:background="@mipmap/property_background"
                android:text="促销"/>
            <TextView
                android:id="@+id/label_store2"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_16"
                android:gravity="center"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/colorSelect"
                android:background="@mipmap/property_background"
                android:text="上新"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>