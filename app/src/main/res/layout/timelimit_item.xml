<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingBottom="@dimen/sp_15"
    android:paddingTop="@dimen/sp_15"
    android:background="@drawable/recommend_ellipse">
    <ImageView
        android:id="@+id/img_timeitem"
        android:layout_width="@dimen/dp_98"
        android:layout_height="@dimen/dp_110"
        android:background="@mipmap/time_img"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_9"
        android:orientation="vertical">
        <TextView
            android:id="@+id/name_timeitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="55英寸4K高清智能网络彩电屏"
            android:textStyle="bold"
            android:textColor="@color/unselected"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/sp_13"/>
       <LinearLayout
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/dp_7">
           <TextView
               android:id="@+id/property_timeitem1"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="@dimen/dp_3"
               android:paddingBottom="@dimen/dp_3"
               android:paddingRight="@dimen/dp_10"
               android:background="@mipmap/property_background"
               android:text="全面屏"
               android:textSize="@dimen/sp_10"
               android:textColor="@color/colorSelect"
               android:paddingLeft="@dimen/dp_10"/>
           <TextView
               android:id="@+id/property_timeitem2"
               android:layout_marginLeft="@dimen/dp_5"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:paddingTop="@dimen/dp_3"
               android:paddingBottom="@dimen/dp_3"
               android:paddingRight="@dimen/dp_10"
               android:background="@mipmap/property_background"
               android:text="4K高清"
               android:textSize="@dimen/sp_10"
               android:textColor="@color/colorSelect"
               android:paddingLeft="@dimen/dp_10"/>
       </LinearLayout>
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_marginTop="@dimen/dp_15"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/nowthe_price"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="￥ 3299"
               android:textColor="@color/colorSelect"
               android:textSize="@dimen/sp_13"/>
           <TextView
               android:id="@+id/formerly_price_item"
               android:layout_toRightOf="@+id/nowthe_price"
               android:layout_marginLeft="@dimen/dp_9"
               android:layout_alignBottom="@id/nowthe_price"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="￥4999"
               android:textSize="@dimen/sp_10"
               android:textColor="@color/colorUnselected"/>
       </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rob_botten_item"
                android:layout_alignParentRight="true"
                android:background="@color/colorSelect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8"
                android:paddingLeft="@dimen/dp_12"
                android:paddingRight="@dimen/dp_12"
                android:text="抢购中"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                />
            <com.zfwl.zhengfeishop.utils.SaleProgressView
                android:id="@+id/spview_timeitem"
                android:layout_alignBottom="@+id/rob_botten_item"
                app:nearOverText="@string/nearOverText"
                app:overText="@string/overText"
                android:layout_width="@dimen/dp_115"
                android:layout_height="@dimen/dp_13" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>